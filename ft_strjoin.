#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char	*ft_strjoin(char const *s1, char const *s2)
{
	size_t	length;
	char	*str;
	size_t	i;
	size_t	j;

	i = 0;
	j = 0;
	length = 0;
	while (s1[i] || s2[j])
	{
		if (s1[i])
			i++;
		else if (s2[j])
			j++;
		length++;
	}
	str = (char *)malloc(length +1 * sizeof(char));
	if(!str)
		return (NULL);
	i = 0;
	j = 0;
	while (s1[i] || s2[j])
	{
		if (s1[i])
		{
			str[i] = s1[i];
			i++;
		}
		else if (s2[j])
		{
			str[i + j] = s2[j];
			j++;
		}
	}
	str[i+j] = '\0';
	return (str);
}

